{
  "extends": [
    "tslint-react",
    "tslint-eslint-rules"
  ],
  "rules": {
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "indent": [ true, "spaces", 2 ],
    "quotemark": [ true, "single", "jsx-single" ],
    "space-before-function-paren": true,
    "space-within-parens": true,
    "object-curly-spacing": [1, "always"],
    "jsx-curly-spacing": [true, "always"],
    "trailing-comma": [
      "true", {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "never"
        },
        "esSpecCompliant": true
      }
    ],
    "whitespace": [ false, "check-module" ],
    "semicolon": [false, "never"]
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      ".next",
      "next.config.js"
    ]
  }
}