{
  "compilerOptions": {
    "compileOnSave": false,
    "baseUrl": ".",
    "paths": {
      "components": [ "src/components" ],
      "utilities": [ "src/utilities" ],
      "assets": [ "src/assets" ]
    },
    "typeRoots": [
      "./node_moduels/@types",
      "./src/@types"
    ],
    "target": "esnext",
    "module": "esnext",
    "lib": [ "es6", "dom", "es2015.iterable" ],
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": [
    "./pages/**/*.ts*",
    "./src/**/*.ts*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "next.config.js"
  ]
}